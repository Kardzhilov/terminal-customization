alias sudo='sudo '
alias update='sudo apt-get update && sudo apt-get upgrade'
alias l='ls -lah'
alias la='ls -lAh'
alias ll='ls -lh'
alias ls='ls --color=tty'
alias lsa='ls -lah'
alias pullall='find . -mindepth 1 -maxdepth 1 -type d -print -exec git -C {} pull \;'
alias resettime='sudo hwclock -s'
